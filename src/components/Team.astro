<section id="team" class="section bg-gray-50 dark:bg-gray-800/50">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-4 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 font-medium text-sm mb-4">
        Detrás de cada logro, hay un gran equipo
      </span>
      <h2 class="mb-6 text-gray-900 dark:text-white">Conoce a nuestro equipo</h2>
      <p class="text-gray-600 dark:text-gray-300">
        Nuestro equipo reúne talento, experiencia y compromiso para impulsar cada proyecto con excelencia.
      </p>
    </div>

    <!-- Tarjetas -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-8">
      {team.map((person, index) => (
        <div 
          class="card p-6 border border-gray-200 dark:border-gray-700 text-center slide-up"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class={`w-60 h-60 mx-auto mb-6 rounded-full overflow-hidden border-4 border-${person.color}-200 dark:border-${person.color}-800`}>
            <img 
              src={person.image} 
              alt="Ícono de la característica" 
              class="w-full h-full object-cover"
            />
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-900 dark:text-white">{person.title}</h3>
          <p class="text-gray-600 dark:text-gray-300">{person.description}</p>
        </div>
      ))}
    </div>

