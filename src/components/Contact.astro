        <div class="card p-6 border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-semibold mb-6 text-gray-900 dark:text-white">Envianos un mensaje</h3>
          
          <form
            x-data="{ name: '', email: '', message: '', submitted: false, errors: {}, form: null }"
            x-ref="form"
            action="https://formspree.io/f/xeokaqvn"
            method="POST"
          >
            <!-- Campo Nombre -->
            <div class="mb-4">
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Nombre</label>
              <input 
                type="text" 
                id="name" 
                name="name"
                x-model="name"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-hidden focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400"
                placeholder="Su nombre"
              />
              <p class="text-red-500 text-sm mt-1" x-show="errors.name" x-text="errors.name"></p>
            </div>

            <!-- Campo Email -->
            <div class="mb-4">
              <label for="contact-email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Correo electrónico</label>
              <input 
                type="email" 
                id="contact-email" 
                name="email"
                x-model="email"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-hidden focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400"
                placeholder="Su correo electrónico"
              />
              <p class="text-red-500 text-sm mt-1" x-show="errors.email" x-text="errors.email"></p>
            </div>

            <!-- Campo Mensaje -->
            <div class="mb-6">
              <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Mensaje</label>
              <textarea 
                id="message" 
                name="message"
                x-model="message"
                rows="5" 
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-hidden focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400"
                placeholder="Su mensaje"
              ></textarea>
              <p class="text-red-500 text-sm mt-1" x-show="errors.message" x-text="errors.message"></p>
            </div>

            <!-- Botón de Envío -->
            <div x-show="!submitted">
              <button 
                type="button" 
                class="w-full btn-primary"
                x-on:click="
                  errors = {};
                  if (!name) errors.name = 'Por favor, ingrese su nombre';
                  if (!email) errors.email = 'Por favor, ingrese su correo';
                  else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) errors.email = 'Correo no válido';
                  if (!message) errors.message = 'Por favor, ingrese un mensaje';
                  
                  if (Object.keys(errors).length === 0) {
                    submitted = true;
                    $refs.form.submit();
                  }
                "
              >
                Enviar mensaje
              </button>
            </div>

