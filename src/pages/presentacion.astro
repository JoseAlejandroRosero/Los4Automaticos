---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
---

<Layout title="Presentación - Los4Automaticos" description="Descubre las características innovadoras de nuestras patinetas eléctricas, con efectos visuales interactivos y animaciones avanzadas. Explora la tecnología detrás de nuestros productos y cómo transforman tu experiencia de movilidad.">
  <Header />
  <main>
    <HeroSection 
      title="Presentación de Los4Automaticos" 
      highlightText="Presentación"
      description="Conoce los detalles de nuestro proyecto y la manufactura de nuestras patinetas eléctricas. Explora las innovaciones que hacen de Los4Automaticos una experiencia única."
    />

    <section class="section relative z-10 overflow-hidden py-12 md:py-16">
      <div class="container-custom">

        <div class="text-center max-w-3xl mx-auto mb-8 md:mb-16 px-4">
          <span class="inline-block px-4 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 font-medium text-sm mb-4">
            Sustentación Intermedia
          </span>
          <h2 class="text-2xl md:text-3xl mb-4 md:mb-6 text-gray-900 dark:text-white">Primera presentación</h2>
          <p class="text-gray-600 dark:text-gray-300">
            Avances del proyecto.
          </p>
        </div>

        <div class="rounded-lg overflow-hidden shadow-lg">
          <div style="position: relative; width: 100%; height: 0; padding-top: 56.2500%;
          padding-bottom: 0; box-shadow: 0 2px 8px 0 rgba(63,69,81,0.16); margin-top: 1.6em; margin-bottom: 0.9em; overflow: hidden;
          border-radius: 8px; will-change: transform;">
            <iframe loading="lazy" style="position: absolute; width: 100%; height: 100%; top: 0; left: 0; border: none; padding: 0;margin: 0;"
              src="https://www.canva.com/design/DAGs4UtN7nk/OaOnbr792PQNIuABMsz6dA/view?embed" allowfullscreen="allowfullscreen" allow="fullscreen">
            </iframe>
          </div>
        </div>
      </div>
    </section>

    <section class="section bg-gray-50 dark:bg-gray-800/50 relative overflow-hidden py-12 md:py-16">
      <div class="container-custom">

        <div class="text-center max-w-3xl mx-auto mb-8 md:mb-16 px-4">
          <span class="inline-block px-4 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 font-medium text-sm mb-4">
            Sustentación Final
          </span>
          <h2 class="text-2xl md:text-3xl mb-4 md:mb-6 text-gray-900 dark:text-white">Presentación final</h2>
          <p class="text-gray-600 dark:text-gray-300">
            Entrega del proyecto.
          </p>
        </div>

        <div class="rounded-lg overflow-hidden shadow-lg">
          <div style="position: relative; width: 100%; height: 0; padding-top: 56.2500%;
          padding-bottom: 0; box-shadow: 0 2px 8px 0 rgba(63,69,81,0.16); margin-top: 1.6em; margin-bottom: 0.9em; overflow: hidden;
          border-radius: 8px; will-change: transform;">
            <iframe loading="lazy" style="position: absolute; width: 100%; height: 100%; top: 0; left: 0; border: none; padding: 0;margin: 0;"
              src="https://www.canva.com/design/DAGt8hZv6gk/L7AVnxXrEJgHTbvnZd5nxg/view?embed" allowfullscreen="allowfullscreen" allow="fullscreen">
            </iframe>
          </div>
        </div>

        <div class="rounded-lg overflow-hidden shadow-lg">
          <div style="position: relative; width: 100%; height: 0; padding-top: 56.2500%;
          padding-bottom: 0; box-shadow: 0 2px 8px 0 rgba(63,69,81,0.16); margin-top: 1.6em; margin-bottom: 0.9em; overflow: hidden;
          border-radius: 8px; will-change: transform;">
            <iframe loading="lazy" style="position: absolute; width: 100%; height: 100%; top: 0; left: 0; border: none; padding: 0;margin: 0;"
              src="https://www.youtube.com/embed/DL603HhqcK8" 
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
              allowfullscreen="allowfullscreen" >
            </iframe>
          </div>
        </div>
      </div>
    </section>

