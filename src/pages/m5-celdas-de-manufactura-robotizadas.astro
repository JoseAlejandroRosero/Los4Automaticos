---
// Importamos los componentes base del sitio
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';

// Ejemplo de datos para cada sección (puedes ir cambiándolos)
const robots = [
  {
    robotName: "Robot de ejemplo 1",
    robotImage: "https://via.placeholder.com/300",
    robotDescription: "Descripción breve del robot 1.",
  },
  {
    robotName: "Robot de ejemplo 2",
    robotImage: "https://via.placeholder.com/300",
    robotDescription: "Descripción breve del robot 2.",
  },
];

const transporte = [
  {
    elementoName: "Cinta transportadora",
    elementoImage: "https://via.placeholder.com/300",
    elementoDescription: "Elemento encargado de mover piezas o productos dentro de la celda.",
  },
  {
    elementoName: "Fixture de sujeción",
    elementoImage: "https://via.placeholder.com/300",
    elementoDescription: "Dispositivo que asegura las piezas durante el proceso.",
  },
];

const sensoresActuadores = [
  {
    name: "Sensor de presión",
    image: "https://via.placeholder.com/300",
    description: "Mide la presión en tiempo real para garantizar seguridad.",
  },
  {
    name: "Actuador neumático",
    image: "https://via.placeholder.com/300",
    description: "Acciona herramientas mediante aire comprimido.",
  },
];

const elementosSeguridad = [
  {
    name: "Cerca de seguridad",
    image: "https://via.placeholder.com/300",
    description: "Delimita el área de trabajo y evita el acceso no autorizado.",
  },
  {
    name: "Botón de emergencia",
    image: "https://via.placeholder.com/300",
    description: "Permite detener el sistema inmediatamente en caso de peligro.",
  },
];
---

<Layout title="Módulo 5: Celdas de Manufactura Robotizadas" description="Diseño y justificación de celdas robotizadas.">
  <Header />
  <main>
    <!-- =========================
         SECCIÓN 1 - DESCRIPCIÓN
    ========================== -->
    <HeroSection 
      title="Módulo 5: Celdas de Manufactura Robotizadas" 
      highlightText="Descripción"
      description="Este módulo aborda la justificación y diseño de una celda robotizada, considerando flujo de trabajo, seguridad e integración de sensores y actuadores. Aquí encontrarás una descripción general del sistema y sus componentes."
    />

    <!-- =========================
         SECCIÓN 2 - ROBOTS
    ========================== -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800/50">
      <div class="container-custom">
        <div class="text-center max-w-3xl mx-auto mb-10 px-4">
          <span class="inline-block px-4 py-1 rounded-full bg-primary-100 text-primary-600 font-medium text-sm mb-4">
            Módulo 5
          </span>
          <h2 class="text-2xl md:text-3xl mb-4 text-gray-900 dark:text-white">Robots Industriales</h2>
          <p class="text-gray-600 dark:text-gray-300 text-justify">
            Los robots de esta celda ejecutan las tareas principales del proceso de manipulación e inflado. Cada uno cuenta con herramientas específicas para garantizar precisión y seguridad.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {robots.map((robot, index) => (
            <div 
              class="card p-6 border border-gray-200 dark:border-gray-700 slide-up"
              style={`animation-delay: ${index * 150}ms`}
            >
              <h3 class="text-xl font-semibold mb-4 text-center text-gray-900 dark:text-white">{robot.robotName}</h3>
              <img 
                src={robot.robotImage}
                alt={robot.robotName}
                class="w-full h-72 object-contain mb-4 rounded-md"
                loading="lazy"
              />
              <p class="text-gray-700 dark:text-gray-300 text-justify">{robot.robotDescription}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- =========================
         SECCIÓN 3 - TRANSPORTE Y POSICIONAMIENTO
    ========================== -->
    <section class="py-16 bg-white dark:bg-gray-800">
      <div class="container-custom">
        <div class="text-center max-w-3xl mx-auto mb-10 px-4">
          <span class="inline-block px-4 py-1 rounded-full bg-accent-100 text-accent-600 font-medium text-sm mb-4">
            Transporte y Posicionamiento
          </span>
          <h2 class="text-2xl md:text-3xl mb-4 text-gray-900 dark:text-white">Elementos de Transporte</h2>
          <p class="text-gray-600 dark:text-gray-300 text-justify">
            Estos componentes garantizan el flujo eficiente de materiales dentro de la celda robotizada, asegurando un posicionamiento correcto de las piezas durante el proceso.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {transporte.map((elem, index) => (
            <div 
              class="card p-6 border border-gray-200 dark:border-gray-700 slide-up"
              style={`animation-delay: ${index * 150}ms`}
            >
              <h3 class="text-xl font-semibold mb-4 text-center text-gray-900 dark:text-white">{elem.elementoName}</h3>
              <img 
                src={elem.elementoImage}
                alt={elem.elementoName}
                class="w-full h-72 object-contain mb-4 rounded-md"
                loading="lazy"
              />
              <p class="text-gray-700 dark:text-gray-300 text-justify">{elem.elementoDescription}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- =========================
         SECCIÓN 4 - SENSORES Y ACTUADORES
    ========================== -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800/50">
      <div class="container-custom">
        <div class="text-center max-w-3xl mx-auto mb-10 px-4">
          <span class="inline-block px-4 py-1 rounded-full bg-primary-100 text-primary-600 font-medium text-sm mb-4">
            Sensores y Actuadores
          </span>
          <h2 class="text-2xl md:text-3xl mb-4 text-gray-900 dark:text-white">Componentes de Control</h2>
          <p class="text-gray-600 dark:text-gray-300 text-justify">
            Los sensores y actuadores permiten la interacción entre el sistema de control y el entorno físico, garantizando una ejecución precisa del proceso.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {sensoresActuadores.map((comp, index) => (
            <div 
              class="card p-6 border border-gray-200 dark:border-gray-700 slide-up"
              style={`animation-delay: ${index * 150}ms`}
            >
              <h3 class="text-xl font-semibold mb-4 text-center text-gray-900 dark:text-white">{comp.name}</h3>
              <img 
                src={comp.image}
                alt={comp.name}
                class="w-full h-72 object-contain mb-4 rounded-md"
                loading="lazy"
              />
              <p class="text-gray-700 dark:text-gray-300 text-justify">{comp.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- =========================
         SECCIÓN 5 - ANÁLISIS DE RIESGOS
    ========================== -->
    <section class="py-16 bg-white dark:bg-gray-800">
      <div class="container-custom">
        <div class="text-center max-w-3xl mx-auto mb-10 px-4">
          <span class="inline-block px-4 py-1 rounded-full bg-primary-100 text-primary-600 font-medium text-sm mb-4">
            Análisis de Riesgos
          </span>
          <h2 class="text-2xl md:text-3xl mb-4 text-gray-900 dark:text-white">Peligros Potenciales</h2>
          <p class="text-gray-600 dark:text-gray-300 text-justify">
            Se analizan los principales riesgos presentes durante la operación de la celda robotizada, identificando posibles causas y proponiendo medidas de mitigación.
          </p>

          <ul class="text-gray-600 dark:text-gray-300 list-disc list-inside text-justify mt-6">
            <li>Atrapamiento entre el robot y estructuras fijas</li>
            <li>Golpes por movimiento inesperado del robot</li>
            <li>Explosión de llantas por sobrepresión</li>
            <li>Falla del sistema neumático o fuga de aire</li>
            <li>Acceso no autorizado durante operación</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- =========================
         SECCIÓN 6 - ELEMENTOS DE SEGURIDAD
    ========================== -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800/50">
      <div class="container-custom">
        <div class="text-center max-w-3xl mx-auto mb-10 px-4">
          <span class="inline-block px-4 py-1 rounded-full bg-primary-100 text-primary-600 font-medium text-sm mb-4">
            Elementos de Seguridad
          </span>
          <h2 class="text-2xl md:text-3xl mb-4 text-gray-900 dark:text-white">Protecciones y Dispositivos</h2>
          <p class="text-gray-600 dark:text-gray-300 text-justify">
            Los elementos de seguridad protegen tanto al operario como al equipo, garantizando que las operaciones se realicen bajo condiciones controladas.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {elementosSeguridad.map((seg, index) => (
            <div 
              class="card p-6 border border-gray-200 dark:border-gray-700 slide-up"
              style={`animation-delay: ${index * 150}ms`}
            >
              <h3 class="text-xl font-semibold mb-4 text-center text-gray-900 dark:text-white">{seg.name}</h3>
              <img 
                src={seg.image}
                alt={seg.name}
                class="w-full h-72 object-contain mb-4 rounded-md"
                loading="lazy"
              />
              <p class="text-gray-700 dark:text-gray-300 text-justify">{seg.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

  </main>
  <Footer />
</Layout>
